<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingPrefix"
    android:layout_width="match_parent"
    android:layout_marginLeft="3dp"
    android:minHeight="60dp"
    android:layout_height="wrap_content">

    <RatingBar
        android:id="@+id/carddemo_extras_gplay_main_inner_ratingBar"
        style="@style/carddemo_extras_myapps_main_inner_ratingbar"
        android:numStars="5"
        android:stepSize="1.0"
        android:layout_marginLeft="5dp"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/carddemo_extras_gplay_main_inner_title"
        android:layout_width="wrap_content"
        android:textSize="12sp"
        fontPath="fonts/Helvetica Neue CE 75 Bold.ttf"
        android:textColor="@android:color/holo_green_light"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_below="@id/carddemo_extras_gplay_main_inner_title"
        android:id="@+id/carddemo_extras_gplay_main_inner_subtitle"
        android:textSize="12sp"
        android:textColor="#BBB"
        fontPath="fonts/Helvetica Neue CE 55 Roman.ttf"
        android:layout_marginLeft="5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</RelativeLayout>


