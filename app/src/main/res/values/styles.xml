<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="19">true</item>

        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">false</item>

        <!-- Material Theme -->
        <item name="colorPrimary">#003165</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#02A8F3</item>

        <item name="android:statusBarColor" tools:targetApi="21">@color/statusBarColor</item>
        <item name="android:navigationBarColor" tools:targetApi="21">@color/navigationBarColor</item>
        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="21">true</item>


    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/drawerArrowColor</item>
    </style>

    <style name="CustomTheme" parent="MaterialDrawerTheme.TranslucentStatus">
        <!-- ...and here we setting appcompatâ€™s color theme attrs -->
        <item name="colorPrimary">#003165</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#02A8F3</item>
        <item name="android:windowBackground">@color/app_background</item>

        <!-- MaterialDrawer specific values -->
        <item name="material_drawer_background">#f2f8ff</item>
        <item name="material_drawer_icons">@color/material_drawer_dark_icons</item>
        <item name="material_drawer_primary_text">#343434</item>
        <item name="material_drawer_secondary_text">#343434</item>
        <item name="material_drawer_hint_text">@color/material_drawer_dark_hint_text</item>
        <item name="material_drawer_divider">@color/drawer_text_sec_line_divider</item>
        <item name="material_drawer_selected">#ffffff</item>
        <item name="material_drawer_selected_text">#ffffff</item>
        <item name="material_drawer_header_selection_text">#ffffff</item>

        <!-- CAB :D -->
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="FullscreenTheme" parent="MaterialDrawerTheme.Light.DarkToolbar.TranslucentStatus"></style>

    <!-- Edit Box Style -->
    <style name="edit_box_text_style">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">13dp</item>
        <item name="android:paddingLeft">38dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textColor">#6f7173</item>
        <item name="android:singleLine">true</item>
    </style>


    <!-- SignIn Button Style -->
    <style name="sign_in_button_style">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@mipmap/sign_in</item>
    </style>

    <!-- Update Button Style -->
    <style name="update_button_style">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">13dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/my_detail_update</item>
        <item name="android:background">@mipmap/blue_button</item>
    </style>

    <!-- My detail Fragement Edit Box Style -->
    <style name="my_detail_editbox_text_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">13dp</item>
        <item name="android:layout_weight">1.90</item>
        <item name="android:gravity">left|center</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">#003165</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- My detail Fragement text Box Black Style -->
    <style name="my_detail_text_style_black">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13dp</item>
        <item name="android:layout_weight">0.75</item>
        <item name="android:gravity">center|left</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">#000000</item>
        <item name="android:paddingLeft">@dimen/my_detail_content_padding_left</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- My detail Fragement text Box Blue Style -->
    <style name="my_detail_text_style_pencil">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13dp</item>
        <item name="android:layout_weight">0.75</item>
        <item name="android:gravity">center|left</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingLeft">@dimen/my_detail_content_padding_left</item>
        <item name="android:textColor">#6d7073</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- My detail Fragement image Style -->
    <style name="my_detail_image_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.35</item>
        <item name="android:gravity">center</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:src">@mipmap/pencil</item>
    </style>


    <!-- My detail Fragement Spinner Style -->
    <style name="mydetail_spinnertheme" parent="@android:style/Theme.Light">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_weight">2.0</item>
    </style>

    <style name="spinnertheme" parent="@android:style/Theme.Light">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:paddingLeft">38dp</item>
    </style>


    <declare-styleable name="CircularImageViewStyle">
        <attr name="circularImageViewDefault" format="reference"/>
    </declare-styleable>



    <!-- CircularImageView Custom Styling -->
    <declare-styleable name="CircularImageView">

        <!-- Whether or not to draw a circular border around the image. -->
        <attr name="civ_border" format="boolean"/>
        <!-- The color of the border draw around the image. (if enabled) -->
        <attr name="civ_borderColor" format="color"/>
        <!-- Makes the border this pixels wide. (if enabled) -->
        <attr name="civ_borderWidth" format="dimension"/>
        <!-- Whether or not to draw a selector on this view upon touch events. -->
        <attr name="civ_selector" format="boolean"/>
        <!-- The color of the selector draw on top of the image upon touch events. (if enabled) -->
        <attr name="civ_selectorColor" format="color"/>
        <!-- The color of the selector stroke drawn around the image upon touch events. Be sure to provide some opacity. (if enabled) -->
        <attr name="civ_selectorStrokeColor" format="color"/>
        <!-- The selector stroke drawn around the image upon touch events this pixels wide. (if enabled) -->
        <attr name="civ_selectorStrokeWidth" format="dimension"/>
        <!-- Whether or not to draw a shadow around your circular image. -->
        <attr name="civ_shadow" format="boolean"/>
        <!-- The radius for the shadow to extend to. (if enabled) -->
        <attr name="civ_shadowRadius" format="float"/>
        <!-- Horizontal shadow offset. (if enabled) -->
        <attr name="civ_shadowDx" format="float"/>
        <!-- Vertical shadow offset. (if enabled) -->
        <attr name="civ_shadowDy" format="float"/>
        <!-- The color of the shadow drawn around your circular image. (if enabled) -->
        <attr name="civ_shadowColor" format="color"/>
    </declare-styleable>


    <style name="coloredRatingBarStyle">
        <item name="indicator">false</item>
        <item name="type1">normal</item>
    </style>

    <style name="coloredRatingBarStyleIndicator">
        <item name="indicator">true</item>
        <item name="type1">normal</item>
    </style>

    <style name="coloredRatingBarStyleSmall">
        <item name="indicator">false</item>
        <item name="type1">small</item>
    </style>

    <style name="coloredRatingBarStyleSmallIndicator">
        <item name="indicator">true</item>
        <item name="type1">small</item>
    </style>


    <style name="RevealTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--Custom Category Save Button-->
    <style name="custom_cat_save_btn">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/primary_dark</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
